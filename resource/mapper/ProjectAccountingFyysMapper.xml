<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.ldxx.dao.ProjectAccountingFyysDao" >

	<insert id="addProjectAccountingFyys" parameterType="java.util.List">
		insert into project_accounting_fyys (pa_id,classify,prj_detail,department,cost_amount,cb_desc) 
		values
			<foreach collection="accountingFyys" item="item" index="index" separator=",">
				(#{item.paId},#{item.classify},#{item.prjDetail},#{item.department},#{item.costAmount},#{item.cbDesc})
			</foreach>
	</insert>
	
	<select id="getProjectAccountingFyysById" resultType="ProjectAccountingFyys">
		select *,b.om_name from project_accounting_fyys a left join organization_management b on a.department=b.om_id where pa_id=#{id}
	</select>

</mapper>