<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.ldxx.dao.ProjectAccountingDao" >

	<insert id="addProjectAccounting">
		insert into project_accounting(pa_id,prj_name,prj_no,yezhu,cj_department,prj_leader,contract_money,
			prj_js_money,prj_ys_cost,ys_profit,ys_profit_margin,js_profit,js_profit_margin,prj_actual_cost,
			all_js_profit,all_ys_profit,all_js_profit_margin,all_ys_profit_margin)
		values(#{projectAccounting.paId},#{projectAccounting.prjName},#{projectAccounting.prjNo},#{projectAccounting.yezhu}
		,#{projectAccounting.cjDepartment},#{projectAccounting.prjLeader},#{projectAccounting.contractMoney},#{projectAccounting.prjJsMoney}
		,#{projectAccounting.prjYsCost},#{projectAccounting.ysProfit},#{projectAccounting.ysProfitMargin},#{projectAccounting.jsProfit}
		,#{projectAccounting.jsProfitMargin},#{projectAccounting.prjActualCost},#{projectAccounting.allJsProfit},#{projectAccounting.allYsProfit}
		,#{projectAccounting.allJsProfitMargin},#{projectAccounting.allYsProfitMargin})
	</insert>
	
	<select id="selectProjectAccounting" resultType="ProjectAccounting">
		select * from project_accounting as a left join mode_status as b on a.pa_id=b.mode_id where b.status=#{status}
	</select>
	
	<select id="getProjectAccountingById" resultType="ProjectAccounting">
		select * from project_accounting where pa_id=#{id}
	</select>


</mapper>